{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "lib": ["es6"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "./bin/",
      "target": "es6",
      "types": [
          "node", "express"
      ]
    },
    "include": [
        "src/server/**/*",
        "src/common/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/react/*"
    ],
  }